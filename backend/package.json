{
  "name": "joinbitcoin.org",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "prepare": "husky install",
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts  | pino-pretty",
    "start:watch": "nodemon",
    "test": "jest"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=6.14.12"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "preset": "ts-jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.24.1",
    "body-parser": "^1.19.0",
    "coinbase-pro": "^0.9.0",
    "express": "^4.17.1",
    "got": "^11.8.2",
    "jest": "^27.0.4",
    "livereload": "^0.9.3",
    "pino": "^6.11.3",
    "supertest": "^6.1.3",
    "tough-cookie": "^4.0.0",
    "ts-jest": "^27.0.2",
    "uuid": "^3.4.0",
    "uuidv4": "^6.2.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/livereload": "^0.9.0",
    "@types/node": "^15.3.0",
    "@types/pino": "^6.3.8",
    "@types/supertest": "^2.0.11",
    "@types/tough-cookie": "^4.0.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "pino-pretty": "^5.0.2",
    "prisma": "^2.24.1",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
